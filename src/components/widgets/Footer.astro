---
import { Icon } from 'astro-icon/components';
import { SITE } from 'astrowind:config';
import { getHomePermalink } from '~/utils/permalinks';

interface Link {
  text?: string;
  href?: string;
  ariaLabel?: string;
  icon?: string;
}

interface Links {
  title?: string;
  links: Array<Link>;
}

export interface Props {
  links: Array<Links>;
  secondaryLinks: Array<Link>;
  socialLinks: Array<Link>;
  footNote?: string;
  theme?: string;
}

---

<footer class="bg-gray-100 border-t border-gray-300 dark:border-gray-700 text-gray-600 dark:text-gray-400 py-4">
  <div class="max-w-4xl mx-auto px-4 flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
    
    <!-- Logo y Links Secundarios -->
    <div class="text-center md:text-left">
      <a href="/" class="text-lg font-semibold text-gray-300 dark:text-gray-800 hover:underline">School of the Future</a>
      <div class="text-sm mt-1 space-x-2">
        <a href="/about" class="hover:underline">About Us</a> ·
        <a href="/contact" class="hover:underline">Contact</a> ·
        <a href="/privacy" class="hover:underline">Privacy Policy</a>
        <a href="https://ulisescastell.com" class="hover:underline">developed by ulicastell & ayman</a>
      </div>
    </div>

    <!-- Links de Navegación -->
    <div class="flex flex-wrap justify-center md:justify-start space-x-4">
      <a href="/courses" class="text-sm hover:underline">Courses</a>
      <a href="/blog" class="text-sm hover:underline">Blog</a>
      <a href="/events" class="text-sm hover:underline">Events</a>
      <a href="/resources" class="text-sm hover:underline">Resources</a>
